<% include ../partials/header.ejs %>

<h1>Editar Pessoa</h1>
<p><a href="/pessoas">Voltar para lista de Pessoas</a></p>
<form method="post">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" placeholder="Digite seu nome" value="<%= pessoa.nome %>">
  </div>
  <div class="form-group">
    <label for="nascimento">Nascimento</label>
    <input type="text" class="form-control" id="nascimento" name="nascimento" placeholder="Informe sua data de nascimento" value="<%= pessoa.nascimento %>">
  </div>
  <div class="form-group">
    <label for="cargo">Cargo</label>
    <input type="text" class="form-control" id="cargo" name="cargo" placeholder="Digite seu cargo" value="<%= pessoa.cargo %>">
  </div>
  
  <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<% include ../partials/footer.ejs %>